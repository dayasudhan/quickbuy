<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="North Indian"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:textColor="@color/title_text_color"
        android:id="@+id/checkbox_title"
        android:layout_alignBaseline="@+id/checkBox_filter"
        android:layout_alignBottom="@+id/checkBox_filter"
        android:layout_toRightOf="@+id/checkBox_filter" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/checkBox_filter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/checkbox_subtitle"
        android:textColor="@color/secondary_text_color"
        android:textSize="10dp"
        android:layout_below="@+id/checkbox_title"
        android:layout_alignLeft="@+id/checkbox_title" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view1"
        android:layout_height="0.5dp"
        android:background="@color/text_view_grey"
        android:layout_below="@+id/checkbox_subtitle"
        android:layout_marginTop="10dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/checkBox_filter_1"
        android:layout_below="@+id/view1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="South Indian"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:textColor="@color/title_text_color"
        android:id="@+id/checkbox_title_1"
        android:layout_alignBaseline="@+id/checkBox_filter_1"
        android:layout_alignBottom="@+id/checkBox_filter_1"
        android:layout_toRightOf="@+id/checkBox_filter_1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/checkbox_subtitle_1"
        android:textColor="@color/secondary_text_color"
        android:textSize="10dp"
        android:layout_below="@+id/checkbox_title_1"
        android:layout_alignLeft="@+id/checkbox_title_1" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view2"
        android:layout_height="0.5dp"
        android:background="@color/text_view_grey"
        android:layout_below="@+id/checkbox_subtitle_1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UPDATE"
        android:id="@+id/update_filter"
        android:layout_below="@+id/view2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/checkBox_filter_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="RESET"
        android:textSize="14dp"
        android:id="@+id/reset_filter"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_view_grey"
        android:paddingTop="1dp"
        android:layout_alignTop="@+id/update_filter"
        android:layout_toRightOf="@+id/update_filter" />
</RelativeLayout>